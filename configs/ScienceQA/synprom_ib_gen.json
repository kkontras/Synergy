{
  "training_params": {
    "tdqm_disable": false
  },
  "early_stopping": {
    "end_of_epoch_check": true,
    "n_steps_stop": 50,
    "save_every_valstep": 10,
    "validate_every": 25
  },
  "optimizer": {
    "type": "Adam",
    "learning_rate": 0.00001,
    "momentum": 0.9,
    "weight_decay": 0.00001,
    "beta1": 0.9,
    "beta2": 0.999
  },
  "dataset": {
      "norm": false,
      "return_data" : {"video": true, "spectrogram":true, "audio":false, "face": false},
      "sampling_rate": 22050,
      "data_split": {
        "fold": 0
      }
  },
  "model": {
    "model_class": "QwenVL_ScienceQA_Synergy_Frozen",
    "args": {
      "d_model": 512, "num_classes": 5, "fc_inner": 64, "dropout": 0.1,
      "cls_type": "linear",
      "clip_grad": false,
      "bias_infusion": {
        "method": "false",
        "l": 0.1,
        "starting_epoch": 0,
        "ending_epoch": 1500,
        "use": true,
        "plot": false
      },
      "multi_loss": {
        "multi_supervised_w": {
             "combined": 0, "c": 0, "g": 0
          }
      }
    },
    "load_ongoing": false,
    "save_dir": "Synprom_IBInput_{}.pth.tar",
    "encoders": [
      {
        "model": "LinearHead",
        "args": {
          "d_model": 2048,
          "num_classes": 5
        },
        "pretrainedEncoder": {
          "use": false,
          "dir": "Qwen3VL_LH_fold{}.pth.tar"
        },
        "save_encoder": true
      }
    ]
  }
}